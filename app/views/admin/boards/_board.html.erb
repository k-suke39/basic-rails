<tr>
  <td>
    <%= board.id %>
  </td>
    <td>
    <%= board.title %>
  </td>
  <td>
    <%= board.user.decorate.full_name %>
  </td>

  <td>
    <%= l board.created_at, format: :long %>
  </td>
  <td>
    <%= link_to '詳細', admin_board_path(board), class: 'btn btn-info' %>
    <%= link_to '編集', edit_admin_board_path(board), class: 'btn btn-success' %>
    <%= link_to '削除', admin_board_path(board), data: { turbo_method: :delete, turbo_confirm: "削除しますか？"}, class: 'btn btn-danger' %>
  </td>
</tr>