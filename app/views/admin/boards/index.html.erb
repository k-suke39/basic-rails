<% content_for(:title, '掲示板一覧 | RUNTEQ BOARD APP(管理画面)') %>
<div class="container mb-5 pt-2">
  <h1><%= '掲示板一覧' %></h1>
  <div class="row">
    <div class="col-md-12 mb-3">
      <%= render 'search_form' %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped">
        <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col"><%= Board.human_attribute_name(:title) %></th>
          <th scope="col">作成者</th>
          <th scope="col">作成日時</th>
          <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        <%= render @boards %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <!-- ページネーション -->
      <%= paginate @boards %>
    </div>
  </div>
</div>