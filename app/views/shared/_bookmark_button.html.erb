<% if bookmark?(board) %> 
  <%= link_to board_bookmarks_path(board), id: "unbookmark-button-for-board-#{board.id}", data: { "turbo-method": :delete } do %>
    <i class="bi bi-star-fill"></i>
  <% end %>
<% else %>
  <%= link_to board_bookmarks_path(board), id: "bookmark-button-for-board-#{board.id}", data: { "turbo-method": :post } do %>
    <i class="bi bi-star"></i>
  <% end %>
<% end %>