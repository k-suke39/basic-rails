      <span class='navbar-toggler-icon'></span>
    </button>

    <div class='collapse navbar-collapse' id='navbarSupportedContent'>
      <ul class='navbar-nav ms-auto main-nav align-items-center'>
        <li class='nav-item dropdown dropdown-slide'>
          <!-- link_toを使う形に修正してください -->
          <%= link_to t('header.board'), '#', class: 'nav-link dropdown-toggle', data: { bs_toggle: 'dropdown' }, aria: { haspopup: 'true', expanded: 'false' }%>
          <div class='dropdown-menu dropdown-menu-end'>
            <!-- link_toを使う形に修正してください -->
            <%= link_to t('header.board_index'), boards_path, class: 'dropdown-item'%>
            <!-- link_toを使う形に修正してください -->
            <%= link_to t('header.create_board'), new_board_path, class: 'dropdown-item'%>
          </div>
        </li>

        <li class='nav-item'>
          <!-- link_toを使う形に修正してください -->
          <%= link_to 'ブックマーク一覧', bookmarks_boards_path, class: 'nav-link'%>
        </li>

        <li class='nav-item dropdown dropdown-slide'>
          <!-- link_toを使う形に修正してくださいdata属性、area属性の書き方は次の通りです。-->
          <!-- data: { bs_toggle: 'dropdown' }, aria: { haspopup: 'true' }, aria: { expanded: 'false' } -->
          <%= link_to '#', class: 'nav-link', data: { bs_toggle: 'dropdown' }, aria: { haspopup: 'true', expanded: 'false' }, id: 'header-profile' do%>
    
            <!-- image_tagを使う形に修正してください -->
            <%= image_tag 'sample.jpg', class: 'rounded-circle mr15', width: '40', height: '40'%>
         
          <% end %>
          <div class='dropdown-menu dropdown-menu-end'>
            <div class='dropdown-item'><%= current_user.decorate.full_name %></div>
            <div class='dropdown-divider'></div>
            <!-- link_toを使う形に修正してください -->
            <%= link_to t('header.profile'), '#', class: 'dropdown-item'%>
            <!-- link_toを使う形に修正してください -->
            <%= link_to t('header.logout'), logout_path,data: { turbo_method: :delete }, class: 'dropdown-item'%>
          </div>
        </li>
      </ul>
    </div>
