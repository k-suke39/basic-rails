  <!-- コメントフォーム -->
  <div class="row mb-3" id="comment-form">
    <div class="col-lg-8 offset-lg-2">
      <%= form_with model:[board, comment] do |f|%>
        <%= render 'shared/error_messages', model: f.object %>
        <%= f.label :body,'コメント'%>
        <%= f.text_area :body, class: 'form-control mb-3', row: '4', placeholder: 'コメント'%>
        <%= f.submit '投稿', class: 'btn btn-primary'%>
      <% end %>
      <!-- ここまでform_withを使う形に修正してください -->
    </div>
  </div>